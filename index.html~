<script type="text/javascript">
	
(function(){


   var whatColor = function() {


      var d = new Date(); // cria um objeto do tipo Date;

      var horas    = d.getHours();
      var minutos  = d.getMinutes();
      var segundos = d.getSeconds();

       if( horas < 10 ) {

           horas = '0' + horas;

       } 

       if ( minutos < 10 ) {

       	   minutos = '0' + minutos;
       }


       if ( segundos < 10 ) {

       	   segundos = '0' + segundos;

       }

             horas.toString(); // converte o número para String;
           minutos.toString();
          segundos.toString();

    
    var hexa = '#' + horas + minutos + segundos; // Faz um hexadecimal com os valores obtidos 

    document.querySelector(".time").innerHTML = horas + ' : ' + minutos + ' : ' + segundos;
    document.querySelector(".hexa_decimal").innerHTML = hexa;

    document.body.style.background = hexa;


  //  setTimeout(whatColor, 1000); // executa uma função a cada 1 segundo

         
  }; // função whatColor 



      whatColor();

    setInterval(whatColor, 1000); // executa uma função a cada 1 segundo



}()); // () necessário para executar a função.


</script>



